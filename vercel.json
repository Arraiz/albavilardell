{
  "version": 2,
  "buildCommand": "hugo --gc --minify --disableKinds=RSS,sitemap",
  "outputDirectory": "public",
  "framework": "hugo",
  "cleanUrls": true,
  "trailingSlash": true,
  "rewrites": [
    { "source": "/:path*.xml", "destination": "/" },
    { "source": "/index.xml", "destination": "/" },
    { "source": "/", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
} 