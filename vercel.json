{
  "version": 2,
  "buildCommand": "hugo --gc --minify",
  "outputDirectory": "public",
  "framework": "hugo",
  "cleanUrls": true,
  "trailingSlash": true,
  "rewrites": [
    { 
      "source": "/", 
      "destination": "/index.html" 
    },
    { 
      "source": "/index.xml", 
      "destination": "/index.html" 
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    }
  ]
} 