{
  "buildCommand": "hugo --gc --minify",
  "outputDirectory": "public",
  "framework": "hugo",
  "cleanUrls": true,
  "trailingSlash": true,
  "routes": [
    {
      "src": "^/$",
      "dest": "/index.html",
      "headers": {
        "Content-Type": "text/html; charset=utf-8"
      }
    },
    {
      "src": "/index.xml",
      "dest": "/index.html"
    }
  ]
} 